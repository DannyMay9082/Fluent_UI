<UserControl
    x:Class="Wpf.Ui.Gallery.Controls.ControlPresenterUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.Ui.Gallery.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            FontSize="18"
            FontWeight="DemiBold"
            Text="{Binding HeaderText, Mode=OneWay}" />
        <ui:Card Margin="0,8,0,0">
            <ContentPresenter Content="{Binding ControlContent, Mode=OneWay}" />
        </ui:Card>
        <ui:CodeBlock Margin="0,4,0,0" Content="{Binding CodeText, Mode=OneWay}" />
    </StackPanel>
</UserControl>
