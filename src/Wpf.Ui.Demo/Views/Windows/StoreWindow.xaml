<ui:UiWindow
    x:Class="Wpf.Ui.Demo.Views.Windows.StoreWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.Ui.Demo.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:Wpf.Ui.Demo.Views.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="WPF UI - MS Store Window"
    Width="1200"
    Height="654"
    d:DesignHeight="650"
    d:DesignWidth="900"
    Background="{DynamicResource ApplicationBackgroundBrush}"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:NavigationView
            x:Name="RootNavigation"
            Grid.Row="1"
            PaneDisplayMode="LeftFluent"
            TransitionType="FadeIn">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Content="Dashboard"
                    Icon="Home24"
                    TargetPageTag="dashboard"
                    TargetPageType="{x:Type pages:STPage}" />
                <ui:NavigationViewItem
                    Content="Apps"
                    Icon="Apps24"
                    TargetPageTag="apps"
                    TargetPageType="{x:Type pages:STPage}" />
                <ui:NavigationViewItem
                    Content="Controls"
                    Icon="ResizeLarge24"
                    TargetPageTag="controls"
                    TargetPageType="{x:Type pages:STPage}" />
                <ui:NavigationViewItem
                    Content="Games"
                    Icon="Games24"
                    TargetPageTag="games"
                    TargetPageType="{x:Type pages:STPage}" />
                <ui:NavigationViewItem
                    Content="Long name element"
                    Icon="Color24"
                    TargetPageTag="longname"
                    TargetPageType="{x:Type pages:STPage}" />
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem
                    Content="Library"
                    Icon="Library24"
                    TargetPageTag="library"
                    TargetPageType="{x:Type pages:STPage}" />
                <ui:NavigationViewItem
                    Content="Help"
                    Icon="QuestionCircle24"
                    TargetPageTag="help"
                    TargetPageType="{x:Type pages:STPage}" />
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>


        <ui:TitleBar
            Title="WPF UI - Fluent design system"
            Grid.Row="0"
            Icon="pack://application:,,,/Resources/wpfui.png" />
    </Grid>
</ui:UiWindow>
